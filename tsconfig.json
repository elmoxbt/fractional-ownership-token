{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["mocha", "chai", "node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["tests/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist", "app"]
}
